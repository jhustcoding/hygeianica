<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PointOfSale.Pages.CustomerPage"
             xmlns:a="clr-namespace:PointOfSale"
             Title="CustomerPage">

    <ScrollView Grid.Row="1" Margin="0,24,0,24">
        <Grid RowDefinitions="150,*" RowSpacing="24"
                  ColumnDefinitions="*,*,*" ColumnSpacing="24">
            <Grid.Resources>
                <Style TargetType="Label" Class="Percent">
                    <Setter Property="TextColor" Value="#50D1AA"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="VerticalTextAlignment" Value="Center"/>
                </Style>

                <Style TargetType="Label" Class="Up">
                    <Setter Property="TextColor" Value="#50D1AA"/>
                </Style>

                <Style TargetType="Label" Class="Down">
                    <Setter Property="TextColor" Value="#FF7CA3"/>
                </Style>

                <Style TargetType="Label" Class="Data">
                    <Setter Property="TextColor" Value="#ffffff"/>
                    <Setter Property="FontSize" Value="28"/>
                    <Setter Property="VerticalTextAlignment" Value="Center"/>
                </Style>

                <Style TargetType="Label" Class="Label">
                    <Setter Property="TextColor" Value="#ABBBC2"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="VerticalTextAlignment" Value="Center"/>
                </Style>

                <Style TargetType="Image">
                    <Setter Property="VerticalOptions" Value="Center"/>
                </Style>

            </Grid.Resources>
            <!-- 3 widgets horizontal -->

            <VerticalStackLayout VerticalOptions="Center">
                <Label Text="Main Menu" Style="{StaticResource LargeTitle}"/>
            </VerticalStackLayout>


            <Border
                    Grid.Row="0" Grid.Column="0"
                    Style="{StaticResource DarkBorderView}">
                <Grid RowDefinitions="45,*,24" Margin="16" IsClippedToBounds="False">
                    <HorizontalStackLayout Spacing="12">
                        <Border WidthRequest="38" HeightRequest="38"
                                    VerticalOptions="Center"
                                    Style="{StaticResource LightBorderView}">
                            <Image Source="customer.png" HorizontalOptions="Center"/>
                        </Border>
                        <Label Text="+2.40%" class="Percent,Up"/>
                        <Image Source="arrow_up.png"/>
                    </HorizontalStackLayout>
                    <Label Text="1,234" Grid.Row="1" class="Data"/>
                    <Label Text="Total Customers" Grid.Row="2" class="Label"/>
                </Grid>
            </Border>
            <Border Grid.Column="1"
                    HorizontalOptions="Start"
                    Margin="5,0,0,0"
                    HeightRequest="48"
                    WidthRequest="300"
                    Background="{StaticResource DarkBg1Brush}"
                    Stroke="{StaticResource SecondaryBrush}"
                    StrokeThickness="1"
            >
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                <HorizontalStackLayout>
                    <Image Source="{FontImage Color=White, FontFamily=FontAwesome, Glyph={x:Static a:IconFont.Search},Size=14}"
                           Margin="14,0"
                           VerticalOptions="Center"
                    />
                    <Entry Background="Transparent"
                           Placeholder="Search for name, email etc"
                           PlaceholderColor="{StaticResource TextSecondary}"
                           TextColor="White"
                           VerticalOptions="Center"
                           WidthRequest="250"
                           FontSize="14"/>
                </HorizontalStackLayout>
            </Border>
            <Border
                    Grid.Row="0" Grid.Column="2"
                    Style="{StaticResource DarkBorderView}">
                <Grid ColumnDefinitions="1*,7*" ColumnSpacing="5" 
                      Margin="5">

                    <Button Text="Export" VerticalOptions="Center"
                            Command="{Binding NotImplementedCommand}"/>
                    <Button Grid.Column="1" Text="Add Customer" VerticalOptions="Center"
                            Clicked="OnCounterClicked"/>
                </Grid>
            </Border>

            <!-- Orders list -->
            <Border
                    Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                    Style="{StaticResource DarkBorderView}">
                <Grid Margin="24" RowDefinitions="80,*">
                    <Label Text="Customers" Style="{StaticResource Title1}"/>
                    <Border Stroke="{StaticResource SecondaryBrush}" 
                                StrokeThickness="1" Background="Transparent"
                                Grid.Row="0" HorizontalOptions="End" VerticalOptions="Start"
                                SemanticProperties.Description="Button that opens a filter dialog"
                                >
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Margin="14,12" Spacing="12">
                            <Image Source="filter.png" VerticalOptions="Center" />
                            <Label Text="Filter" VerticalOptions="Center"/>
                        </HorizontalStackLayout>

                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ViewAllCommand}"/>
                        </Border.GestureRecognizers>
                    </Border>


                    <ScrollView Grid.Row="1">
                        <VerticalStackLayout Spacing="16">
                            <!-- heading -->
                            <Grid ColumnDefinitions="200,200,200,200,200,100,100,100,20,*,*">
                                <Label Text="Name" Style="{StaticResource Headline}"/>
                                <Label Text="Phone" Grid.Column="1" Style="{StaticResource Headline}"/>
                                <Label Text="Email" Grid.Column="2" Style="{StaticResource Headline}"/>
                                <Label Text="Status" Grid.Column="3" Style="{StaticResource Headline}"/>
                                <Label Text="Address" Grid.Column="4" Style="{StaticResource Headline}"/>
                                <Label Text="Age" Grid.Column="5" Style="{StaticResource Headline}"/>
                                <Label Text="Gender" Grid.Column="6" Style="{StaticResource Headline}"/>
                                <Label Text="Discount" Grid.Column="7" Style="{StaticResource Headline}"/>
                                <Label Text="QR" Grid.Column="8" Style="{StaticResource Headline}"/>
                                <Label Text="" Grid.Column="9" Style="{StaticResource Headline}"/>
                                <Label Text="" Grid.Column="10" Style="{StaticResource Headline}"/>
                            </Grid>

                            <BoxView Style="{StaticResource HRule}"/>

                            <Grid ColumnDefinitions="200,200,200,200,200,100,100,100,20,50,20">
                                <Label Text="Jhulez Dayrit" />
                                <Label Text="099999999999" Grid.Column="1" />
                                <Label Text="jhulez@gmail.com" Grid.Column="2" />
                                <Label Text="Active" Grid.Column="3" />
                                <Label Text="Quezon City" Grid.Column="4" />
                                <Label Text="20" Grid.Column="5" />
                                <Label Text="Male" Grid.Column="6" />
                                <Label Text="None" Grid.Column="7"  />

                                <Image Source="qr.png" Aspect="Fill" WidthRequest="30" HeightRequest="30" Grid.Column="8"  />
       
                                <Image Grid.Column="9" Source="edit.png"/>
                                <Image Grid.Column="10"  Source="consultation.png"/>
                            </Grid>

                        </VerticalStackLayout>

                    </ScrollView>
                </Grid>
            </Border>

        </Grid>

    </ScrollView>

</ContentPage>